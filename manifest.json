{
  "manifest_version": 3,
  "name": "Safe Web Domain Verification",
  "version": "1.0",
  "description": "Identify legitimate websites and avoid fraud.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "institutions.js",
      "typosquatting-detector.js", 
      "content.js"
    ]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Safe Web Domain Verification"
  }
}