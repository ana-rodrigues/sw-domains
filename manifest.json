{
  "manifest_version": 3,
  "name": "Safe Web Domain Verification",
  "version": "1.0",
  "description": "Identify legitimate websites and avoid fraud.",
  "default_locale": "pt",
  "permissions": ["activeTab", "storage", "action"],
  "icons": {
    "16": "icons/icon-default-16.png",
    "32": "icons/icon-default-32.png",
    "48": "icons/icon-default-48.png",
    "128": "icons/icon-default-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "institutions.js",
      "typosquatting-detector.js", 
      "content.js"
    ]
  }],
  "action": {
    "default_title": "Safe Web Domain Verification",
    "default_icon": {
      "16": "icons/icon-default-16.png",
      "32": "icons/icon-default-32.png",
      "48": "icons/icon-default-48.png",
      "128": "icons/icon-default-128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["popup.html", "styles.css", "popup.js"],
    "matches": ["<all_urls>"]
  }]
}